<Window x:Class="WpfAppTema1.Views.UpdateProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTema1.Views"
        mc:Ignorable="d"
        Title="UpdateProductDialog" Height="450" Width="800">
    <Grid>
        <!-- Definiți controalele și etichetele pentru introducerea detaliilor produsului -->
        <StackPanel Margin="20">
            <TextBlock Text="Product Name:"/>
            <TextBox x:Name="txtProductName"/>
            <TextBlock Text="Price:"/>
            <TextBox x:Name="txtPrice"/>
            <CheckBox IsChecked="{Binding IsAvailable, Mode=TwoWay}" />
            <Button Content="Update" Click="UpdateButton_Click" Margin="10,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
