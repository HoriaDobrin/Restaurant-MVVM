<Window x:Class="WpfAppTema1.Views.UpdateEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTema1.Views"
        mc:Ignorable="d"
        Title="UpdateEmployeeDialog" Height="450" Width="800">

    <Grid>
        <!-- Definiți controalele și etichetele pentru introducerea detaliilor produsului -->
        <StackPanel Margin="20">
            <TextBlock Text="Employee Name:"/>
            <TextBox x:Name="txtEmployeeName"/>
            <TextBlock Text="Position:"/>
            <TextBox x:Name="txtPosition"/>
            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername"/>
            <TextBlock Text="Password:"/>
            <TextBox x:Name="txtPassword"/>
            <Button Content="Update" Click="UpdateButton_Click" Margin="10,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
