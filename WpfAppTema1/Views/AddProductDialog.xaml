<Window x:Class="WpfAppTema1.Views.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="300" Width="400">
    <Grid>
        <!-- Definiți controalele și etichetele pentru introducerea detaliilor produsului -->
        <StackPanel Margin="20">
            <TextBlock Text="Product Name:"/>
            <TextBox x:Name="txtProductName"/>
            <TextBlock Text="Price:"/>
            <TextBox x:Name="txtPrice"/>
            <Button Content="Add" Click="AddButton_Click" Margin="10,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
