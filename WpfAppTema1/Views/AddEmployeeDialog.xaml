<Window x:Class="WpfAppTema1.Views.AddEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Employee" Height="300" Width="400">
    <Grid>
        <!-- Definiți controalele și etichetele pentru introducerea detaliilor angajatului -->
        <StackPanel Margin="20">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName"/>
            <TextBlock Text="Position:"/>
            <TextBox x:Name="txtPosition"/>
            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername"/>
            <TextBlock Text="Password:"/>
            <TextBox x:Name="txtPassword" />
            <Button Content="Add" Click="AddButton_Click" Margin="10,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
